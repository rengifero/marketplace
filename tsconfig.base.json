{
  "compilerOptions": {
 
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022","dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es2022",
    "strict": false,
     "strictPropertyInitialization": false,

    "customConditions": ["@dental-care/source"]
,
"paths": {
      
      // *** Tus alias personalizados aqu√≠ ***
      // Ejemplo de alias para una ruta relativa:
      "@src/*": ["./src/*"],
      "@client/*": ["./apps/dental-care-backend/src/generated/prisma/*"] 


    }


  }
}
